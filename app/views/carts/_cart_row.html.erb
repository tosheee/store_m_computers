<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= eval(admin_product_feature.description)[:code] %></h4>
          <img height="150" width="150" src="<%= eval(admin_product_feature.description)[:main_picture_url] %>">
          <%= eval(admin_product_feature.description)[:code] %>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
          <h4 class="text-right">Unit Price: <span style="color: green"><%=  price_dds(order_item.unit_price)  %></span></h4>
          <div class="row">
            <div class="col-xs-4">
              <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
              <%= f.hidden_field :admin_product_feature_id, value: admin_product_feature.id %>
            </div>
            <div class="col-xs-8 text-right">
              <div class="btn-group">
                <%= f.submit "Update Quantity", class: "btn btn-primary" %>
                <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
              </div>
            </div>
          </div>
          <% price = order_item.total_price %>
          <h4 class="text-right">Total Price: <span style="color: green"><%= "#{ price_dds(order_item.total_price)}" %></span></h4>
      <% end %>
    </div>

  </div>
</div>