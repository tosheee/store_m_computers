<style>
    #container-vertical{
        width: 200px;

    }

    .filters-names{
        list-style-type: none;
        font-size: 16px;
    }
    input[type=checkbox] {
        transform: scale(1.5);
    }

    summary {
        margin-left: 30px;
        color: #666666;
        padding: 2px;
        font-size: 16px;
        outline: none;
    }
    .final-button{
        text-decoration: none;
        padding: 2px;
        font-size: 16px;
        margin-left: 70px;
    }
</style>


<script>

    $(document).ready(function(){
        $('#main-box-vertical-menu').click(function(e){
            e.preventDefault();
            if ($('.ul-inner-element').is(":visible")){
            $('.ul-inner-element').hide()
            }
            else
            {
                $('.ul-inner-element').show()
            }
        });
    });

    $(document).ready(function(){

        $('li.inner-button').click(function(e){
            var $clicked = $(this);
            e.preventDefault();

                if ($clicked.children('.final-button').is(":visible")) {
                    $clicked.children('.final-button').hide()
                } else {
                    $clicked.children('.final-button').hide()
                }
        });

    });
</script>

<%  filster_translate = {'Manufacturer' => 'Производител', 'Screen size' => 'Размер на екрана', 'Screen Resolution' => 'Резолюция', 'Memory size' => 'RAM Памет', 'CPU Model' => 'Процесори' } %>



<div id="container-vertical">
  <div class="row-vertical">
    <div id="left" class="span3">
      <hr>
      <% category_buttons.each_with_index do |button,i| %>
          <details class="ul-inner-element" >
            <summary id="inner-button<%= i%>" class="inner-button" ><%= button.name_cat %></summary>
                <% sub_category_buttons.each_with_index do |sub_button| %>
                  <% if sub_button.category_id == button.id %>
                      <a href="/product=<%=sub_button.identifier %>" class="final-button"><%= sub_button.name %></a>
                    <br>
                  <% end %>
                <% end %>
          </details>
            <% end %>
    </div>
  </div>
</div>
<hr>

  <% if @product_param.present? %>

      <% @filters.each do |k, v|%>
      <details class="ul-inner-element" >
        <summary id="<%= k %>" class="filters-names" ><%= filster_translate[k] %></summary>

          <% unless v.nil? %>
            <% v.each do |val| %>
                <div class="final-button"><input type="checkbox" class="filters-values" value="<%= val %>">  <%= val %>  </div>
              <% end %>
          <% end %>
      </details>
    <% end.first %>

    <div id="button-filter">
      <input id="hidden-filters" type="hidden" value="">
      <input id="filter-button" class="btn btn-primary" type="button" value="Филтрирай"/>
    </div>
  <% end %>

   <script>
      $(document).ready(function() {
          $('#filter-button').click(function() {

              var filter_data = {};
              var filter_value = [];
              var obj_val = {};
              $('.filters-names').each(function(){
                  var name_filter = $(this).attr('id');
                  filter_value = [];
                  $(this).parent().find('.filters-values').each(function(){
                      if ($(this).is(':checked')){
                          filter_value.push( $(this).val());
                          filter_data[name_filter] = filter_value;
                      }
                  });
              });
              var filters = JSON.stringify(filter_data).replace(/\[/g, '(').replace(/\]/g, ')');
              set_new_items
              $('#filter-button').attr('href', "/product=laptops/filter=" + filters);

              $.ajax({
                  url:    "/product=<%= @product_param %>/filter=" + filters,
                  type:   'get',
                  success: set_new_items

              });
             function set_new_items(data){
                 $('#products .item').remove();
                 $('#products').append($(data).find('#products').html())
             }

          });

      });
  </script>
