
<div class="tab-content">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "smart-green" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
    <%= render "devise/shared/links" %>
<% end %>

</div>