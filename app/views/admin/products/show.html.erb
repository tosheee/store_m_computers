
<%= link_to 'Edit', edit_admin_product_path(@admin_product), class: "btn btn-primary" %> |
<%= link_to 'Back', admin_products_path, class: "btn btn-primary" %>

<% product = eval(@admin_product.description) %>

<h1><%= product['code'] %></h1>



<div class="container">
  <div class="row">
    <div class="col-xs-4 item-photo">
      <img style="max-width:100%;" src="<%= product['main_picture_url']%>" />
    </div>
    <div class="col-xs-5" style="border:0px solid gray">
      <!-- Datos del vendedor y titulo del producto -->
      <h3><%= product['code'] %></h3>

      <h5 style="color:#337ab7"> <a href="#"><%= product['manufacturer'] %></a> Â· <small style="color:#337ab7">(5054 ventas)</small></h5>


      <h6 class="title-price"><small>PRECIO OFERTA</small></h6>
      <h3 style="margin-top:0px;"><%= product['price'] %> <%= product['currency'] %></h3>

      <!-- Detalles especificos del producto -->
      <div class="section">
        <h6 class="title-attr" style="margin-top:15px;" ><small>COLOR</small></h6>
        <div>
          <div class="attr" style="width:25px;background:#5a5a5a;"></div>
          <div class="attr" style="width:25px;background:white;"></div>
        </div>
      </div>
      <div class="section" style="padding-bottom:5px;">
        <h6 class="title-attr"><small>C</small></h6>
        <div>
          <div class="attr2">GB</div>
          <div class="attr2">GB</div>
        </div>
      </div>
      <div class="section" style="padding-bottom:20px;">
        <h6 class="title-attr"><small>C</small></h6>
        <div>
          <div class="btn-minus"><span class="glyphicon glyphicon-minus"></span></div>
          <input value="1" />
          <div class="btn-plus"><span class="glyphicon glyphicon-plus"></span></div>
        </div>
      </div>

      <!-- Botones de compra -->
      <div class="section" style="padding-bottom:20px;">
        <button class="btn btn-success"><span style="margin-right:20px" class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>Bye</button>
        <h6><a href="#"><span class="glyphicon glyphicon-heart-empty" style="cursor:pointer;"></span> text like</a></h6>
      </div>
    </div>

    <div class="col-xs-9">
      <ul class="menu-items">
        <li class="active">D</li>
        <li>G</li>
        <li>V</li>
        <li>E</li>
      </ul>
      <div style="width:100%;border-top:1px solid silver">
        <p style="padding:15px;">
          <small>
            any text
          </small>
        </p>
        <small>
          <ul>
            <% product['properties']['property'].each do |property| %>
                <li><%= property %></li>
            <% end %>


          </ul>
        </small>
      </div>
    </div>
  </div>
</div>
