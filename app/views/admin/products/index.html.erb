<p id="notice"><%= notice %></p>

<h1>Listing Admin Products</h1>
<%= link_to 'New Product', new_admin_product_path, class: "btn btn-primary" %>
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_products.each do |admin_product| %>
      <tr>
        <td><%= Admin::Category.where(id: admin_product.category_id).first.name_cat %></td>

        <% description = eval(admin_product.description) %>

        <td><%= description %></td>
        <td><%= link_to 'Show', admin_product %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(admin_product) %></td>
        <td><%= link_to 'Destroy', admin_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


